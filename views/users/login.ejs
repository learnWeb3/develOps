<div class="container">
    <div class="row min-vh-80">
        <div class="col-12 col-lg-6 d-flex flex-column align-items-center justify-content-center">
            <h1 class="col-12 col-lg-8 offset-lg-col-2 my-4 fs-2">Sign in</h1>
            <form id="login" action="/login" method="POST" class="col-12 col-lg-8 offset-lg-col-2">
                <div class="mb-3">
                    <label class="form-label" for="email">Email address</label>
                    <input type="text" name="email" id="email" class="form-control mb-1">
                    <span data-for="email" class="errors text-danger py-2"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control mb-1">
                    <span data-for="password" class="errors text-danger py-2"></span>
                </div>

                <button type="submit" class="btn btn-md btn-success col-12 disabled">
                    Submit
                </button>
            </form>

            <a href="" class="col-12 col-lg-8 offset-lg-col-2 text-muted my-4">Not registered yet ? Sign up</a>
        </div>
        <div class="d-none d-lg-flex col-lg-6  d-flex align-items-center justify-content-center">
            <img src="/images/users/login/login.png" alt="" class="img-fluid">
        </div>
    </div>
</div>

<script type="module" src="/js/users/login.js"></script>