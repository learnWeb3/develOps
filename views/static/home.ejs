<%- include('../layouts/_banneer.ejs', {text: "Code like a pro, read the resource, take the quizz !!" }) %>

<div class="row">
    <div class="col-3 d-none d-md-flex">
        <%- include('../categories/_list_categories.ejs', {categories}) %>
    </div>
    <div class="col-12 col-md-6 p-4">
        <div class="row row-cols-1 row-cols-sm-2 g-4">
            <% articles.forEach((article)=>{ %>
            <div class="col d-flex align-items-center justify-content-center">
               <%- include('../articles/_card.ejs', {article}) %>
            </div>
            <% }) %>
            <% if(!articles.length) { %>
                <%- include('../layouts/empty.ejs') %>
            <% } %>
        </div>
    </div>
    <div class="col-3 d-none d-md-flex"></div>
</div>

<script src="/js/static/home.js"></script>