<%- include('../layouts/_banneer.ejs', {text: article.title }) %>


        <div class="container py-4">
                <div id="toolbar" class="d-none"></div>
                <div id="editor" data-content=<%- article.content %> class="border-0" style="min-height: 50vh;">
                </div>
        </div>

        <div class="container">
                <h2 class="my-4">Let's test what youâ€™ve just learnt !</h2>

                <% article.quiz.forEach((quiz)=>{ %>
                        <form action="/quizz/<%= quiz.id %>/validate" method="post">
                                <p class="my-4 fs-2">
                                        <%= quiz.title %>
                                </p>
                                <% quiz.questions.forEach((question, index)=>{ %>
                                        <%- include('../quiz/_question.ejs', {question, index}) %>
                                                <% }) %>
                                                        <button type="submit"
                                                                class="btn btn-lg btn-success mb-3">Submit</button>
                        </form>
                        <% }) %>
        </div>
        <script src="/js/articles/show.js"></script>
        <script src="/vendors/quill_v1.3.6/quill.min.js"></script>
        <script>
                const articleContent = <%- article.content %>;
                const editor = new Quill('#editor', {
                        modules: {
                                toolbar: {
                                        container: "#toolbar"
                                }
                        },
                        placeholder: 'Compose an epic...',
                        readOnly: true,
                        theme: 'snow'
                });

                editor.setContents(articleContent)
        </script>